{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "jsx": "react-jsx",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src"]
}
